    <!--<script src="js/plugins/morris/morris-data.js"></script>-->
    <script>
    $(function() {
    Morris.Line({
        element: 'morris-area-chart',
        data: <%-linedata %>,
        xkey: 'period',
        ykeys: ['kw'],
        parseTime: false,
        labels: ['kwh'],
        pointSize: 2,
        hideHover: 'auto',
        resize: true
    });


});</script>

